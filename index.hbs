{{!< default}}

<header id="site-head" {{#if @blog.cover}}style="background-image: url({{@blog.cover}});"{{/if}}>	
	<div id="ctitle"><div id="title">
		<h1>{{@blog.title}}</h1>
		<h2>{{@blog.description}}</h2>
	</div></div>
	<a href="/" id="logo"><img src="{{@blog.logo}}" id="logo"></a>
	<div class="cf"></div>
	{{> links}}
</header>

<div class="container" id="content" role="main">

    {{#foreach posts}}

    <article class="{{post_class}}" id="post-{{id}}">
		
		<h1><a href="{{url}}">{{title}}</a></h1>
		<span class="meta">{{date format='MM.DD.YYYY'}} {{#if tags}} #{{#tags}}name{{/tags}} {{/if}}</span>
		<p>{{excerpt}}</p>
    </article>

    {{/foreach}}

{{pagination}}
<div style="clear: both;"></div>
</div>
